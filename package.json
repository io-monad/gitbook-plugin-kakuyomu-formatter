{
    "name": "gitbook-plugin-kakuyomu-formatter",
    "version": "1.0.0",
    "description": "GitBook plugin for formatting text for kakuyomu.jp",
    "author": "IRIDE Monad <iride.monad@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/io-monad/gitbook-plugin-kakuyomu-formatter",
    "bugs": "https://github.com/io-monad/gitbook-plugin-kakuyomu-formatter/issues",
    "main": "index.js",
    "repository": {
      "type": "git",
      "url": "git://github.com/io-monad/gitbook-plugin-kakuyomu-formatter.git"
    },
    "engines": {
        "gitbook": "*"
    },
    "gitbook": {
        "properties": {
            "paragraph": {
                "type": "boolean",
                "default": true,
                "title": "Whether to perform paragraph conversion"
            },
            "ruby": {
                "type": "boolean",
                "default": true,
                "title": "Whether to perform ruby and dots-emphasis conversion"
            }
        }
    }
}
